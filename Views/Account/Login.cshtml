<script>
    // Kiểm tra nếu TempData có giá trị "Error"
    @if (TempData["Error"] != null)
    {
        <text>
            swal("Vui lòng thử lại!", "Tên đăng nhập hoặc mật khẩu không đúng!", "error");
        </text>
    }
</script>


<style>

    /* CSS cho nút "Login" */
    .login-btn {
        background-color: #d09d0a;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
        margin-left: 420px;
    }

        /* Hiệu ứng khi di chuột vào nút "Login" */
        .login-btn:hover {
            background-color: #ab8108;
            color: #fff;
        }

</style>
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css" />
<script src="~/sweetalert2-main/sweetalert2-main/src/sweetalert2.js"></script>

<!-- main-content-wrap start -->
<div class="main-content-wrap section-ptb lagin-and-register-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 m-auto">
                <div class="login-register-wrapper">
                    <!-- login-register-tab-list start -->
                    <div class="login-register-tab-list nav" style="margin: 20px 0 40px 500px; text-align: center;">
                        <a class="active" data-bs-toggle="tab" href="#lg1">
                            <h4> Đăng nhập </h4>
                        </a>

                    </div>
                    <!-- login-register-tab-list end -->
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form asp-action="Login">
                                        <div class="login-input-box" style="margin: 20px 0 40px 300px;">                                           
                                            <div class="form-group">
                                                <input asp-for="TenDangNhap" class="form-control" style="margin: 20px 0 40px 120px;" placeholder="Tên đăng nhập" />
                                                <span asp-validation-for="TenDangNhap" class="text-danger" style="margin: 20px 0 40px 120px;"></span>
                                            </div>
                                            <div class="form-group">
                                                <input asp-for="MatKhau" class="form-control" style="margin: 20px 0 0 120px;" placeholder="Mật khẩu" />
                                                <span asp-validation-for="MatKhau" class="text-danger" style="margin: 20px 0 0 120px;"></span>
                                            </div>
                                        </div>
                                        <div class="button-box">
                                            <div class="login-toggle-btn" style="margin:0 0 40px 200px;">
                                                <div class="remember-me" style="margin: 0 0 20px 220px;">

                                                    <a href="Register">Tạo tài khoản mới?</a>
                                                </div>
                                                <div class="forgot-password" style="margin: 20px 0 20px 220px;">
                                                    <a href="#">Quên mật khẩu?</a>
                                                </div>
                                            </div>

                                            <div class="button-box">
                                                <button id="btnDangNhap" class="login-btn btn" type="submit"><span> Đăng nhập</span></button>
                                            </div>
                                        </div>
                                    </form>    
                                    <!-- Mã JavaScript trong tệp Razor View -->
                                   
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- main-content-wrap end -->








