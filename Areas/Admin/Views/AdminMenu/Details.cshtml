@model ThanhThoaiRestaurant.Models.MonAn

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

<div class="ms-content-wrapper">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb pl-0">
                    <li class="breadcrumb-item"><a href="#"><i class="material-icons">home</i> Admin</a></li>
                    <li class="breadcrumb-item"><a href="#">Món ăn</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết món ăn</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-12">
            <div class="ms-panel">
                <div class="ms-panel-header">
                    <div class="ms-panel-header text-center">
                        <h6>Chi tiết món ăn</h6>
                        <img src="~/img/food/@Model.HinhAnh" alt="First slide" class="img-fluid" style="max-width: 1000px; max-height: 400px;">
                        <h3 style="color:red;">@Model.TenMon</h3>
                    </div>

                </div>
                                                
        </div>
        <div style="display: flex;">
        <div class=" col-md-6">
            <div class="ms-panel ms-panel-fh">
                <div class="ms-panel-body">
                    <h4 class="section-title bold">Thông tin</h4>
                    <table class="table ms-profile-information">
                        <tbody>
                            <tr>
                                <th scope="row">Giá bán</th>
                                        <td> @Model.GiaBan.ToString("N0") VNĐ </td>
                            </tr>
                                    <tr>
                                        <th scope="row">Mô tả ngắn</th>
                                        <td> @Model.MoTaNgan </td>
                                    </tr>
                            <tr>
                                <th scope="row">Nhóm món ăn</th>
                                <td>@Model.MaNhom</td>
                            </tr>
                            <tr>
                                <th scope="row">Trạng thái</th>
                                <td class="badge badge-pill badge-primary" style="font-size: 15px; color: @(Model.SoLuong > 0 ? "green" : "red");">
                                    @(Model.SoLuong > 0 ? "Còn hàng: " + Model.SoLuong + " " + Model.DonViTinh : "Hết hàng")
                                </td>
                               
                            </tr>
                            <tr>
                                <th scope="row">Phí vận chuyển</th>
                                <td>Miễn phí</td>
                            </tr>
                            <tr>
                                <th scope="row">Mã món ăn</th>
                                <td>@Model.MaMon</td>
                            </tr>
                        </tbody>
                    </table>
                   
                </div>
            </div>
        </div>
        <div class=" col-md-6" style="margin-left: 50px;">
            <div class="ms-panel ms-panel-fh">
                <div class="ms-panel-body">
                    <h4 class="section-title bold">Mô tả chi tiết </h4>
                    <p class="description">@Model.MoTaDai</p>
                </div>
                <div class="ms-quick-stats" style="display:flex; margin-top: 50px;">
                    <div class="ms-stats-grid">
                        <i class="fa fa-bullhorn"></i>
                        <p class="ms-text-dark">1,033</p>
                        <span>Today Order</span>
                    </div>
                    <div class="ms-stats-grid" style="margin-left: 100px;">
                        <i class="fa fa-heart"></i>
                        <p class="ms-text-dark">3,039</p>
                        <span>Favourite</span>
                    </div>
                </div>
            </div>
        </div>             
        </div>
     
    </div>

        <div class="text-right mt-3">
            <a href="#" class="btn btn-primary">Edit</a>
            <form asp-controller="AdminMenu" asp-action="Delete" asp-route-id="@Model.MaMon" method="post">
                <button type="button" class="btn btn-secondary ml-2" onclick="confirmDelete()">Delete</button>
                <input type="submit" id="deleteButton" style="display: none;" />
            </form>
        </div>

        <script>
            function confirmDelete() {
                if (confirm("Bạn có chắc chắn muốn xóa món ăn này?")) {
                    document.getElementById("deleteButton").click();
                }
            }
        </script>

        <div class="mt-3">
            <a href="@Url.Action("Index")" class="btn btn-secondary" style="background-color: #FF5733; color: white;">Trở về</a>
        </div>
    </div>
</div>


